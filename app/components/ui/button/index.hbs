<button
  block:scope
  block:style={{@style}}
  block:is-active={{@isActive}}
  disabled={{@disabled}}
  type={{this.type}}
  ...attributes
>
  {{#if @icon}}
    {{svg-jar @icon class=(style-of block:class="icon" block:has-label=@label)}}
  {{/if}}
  {{#if (has-block)}}
    <div block:class="label">
      {{yield}}
    </div>
  {{/if}}
</button>
